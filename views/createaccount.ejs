<form action = "/register" method = "POST">
    <h3> Register </h3>
    
    <div>
        <label for = "Email"> <b> E-mail </b> </label>
        <input type = "text" placeholder = "Enter Your E-mail..." name = "Email">
    </div>
    <div>
        <label for = "Username"> <b> Username </b> </label>
        <input type = "text" placeholder = "Enter Your Username..." name = "Username">
    </div>
    <div>
        <label for = "Password"> <b> Password </b> </label>
        <input type = "password" placeholder = "Enter Your Password..." name = "Password">
    </div>
    <div>
        <label for = "Date_of_Birth"> <b> Date of Birth </b> </label>
        <input type = "text" placeholder = "Enter Your Birthday..." name = "Date_of_Birth">
    </div>
    <h3> User Type </h3>
    <div>
        <input type = "radio" name = "freebtn" [value] = "0">
        <label for = "Suscription"> Free </label>

        <input type = "radio" name = "memberbtn" [value] = "1">
        <label for = "Suscription"> Member </label>
    </div>

    <input type = "submit" value = "Register" class = "btn">
</form>